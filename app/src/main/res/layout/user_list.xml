<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8px"
    android:background="@color/black">

    <TextView
        android:id="@+id/line_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/line_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/gold"
        android:textSize="13sp"
        android:textStyle="italic"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="20dp">
        <TextView
            android:id="@+id/line_hid"
            android:layout_width="0dp"
            android:layout_weight="0.05"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/gold"
            android:textSize="13sp"
            />


        <TextView
            android:id="@+id/line_h1"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/gold"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/line_h2"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/gold"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/line_h3"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/gold"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/line_hAction"
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:layout_height="wrap_content"
            android:text="Action"
            android:textColor="@color/gold"
            android:textSize="13sp" /> 
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/line_id"
            android:layout_width="0dp"
            android:layout_weight="0.05"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gold"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/line_c"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/gold"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/line_d"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/gold"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/line_e"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/gold"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            android:id="@+id/emp_edit_btn"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:id="@+id/emp_del_btn"
           />

    </LinearLayout>

</LinearLayout>